<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/bgcolor"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="CALCULATE YOUR"
        android:textColor="@color/textBlue"
        android:textColorLink="#E67F3A"
        android:textSize="25sp"
        android:textStyle="bold"
         />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="@color/textBlue"
        android:text="AGE"
        android:textColor="@color/white"
        android:textColorLink="#E67F3A"
        android:padding="6dp"
        android:textSize="25sp"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"

        android:text="IN MINUTES"
        android:textColor="@color/textBlue"
        android:textColorLink="#E67F3A"

        android:textSize="25sp"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/btnForDate"
        android:layout_width="148dp"
        android:layout_height="50dp"
        android:backgroundTint="#B8E8FC"
        android:padding="10dp"
        android:textSize="16sp"
        android:text="SELECT DATE"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tvselecteddate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="25dp"
        android:text="07.08.2003"
        android:textColor="@color/textBlue"

        android:textColorLink="#E67F3A"
        android:textSize="25sp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"

        android:text="Selected date"
        android:textColor="#B2B2B2"
        android:textColorLink="#E67F3A"

        android:textSize="25sp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/tvageinminutes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"

        android:text="1400000"
        android:textColor="@color/textBlue"
        android:textColorLink="#E67F3A"

        android:textSize="25sp"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"

        android:text="@string/t3_name"
        android:textColor="#B2B2B2"
        android:textColorLink="#E67F3A"

        android:textSize="25sp"
        android:textStyle="bold"
        />
</LinearLayout>